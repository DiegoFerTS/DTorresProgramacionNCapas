@model ML.Area
@{
    ViewBag.Title = "Areas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Areas</h2>

<br />

<div class="row" style="margin-bottom: 50px;">
    <div class="col">
        <a href="@Url.Action("GetByIdArea", "Producto", new {idArea = 0, nombreArea = "Todas las areas"})" class="btn btn-success">Ver todos los productos</a>
    </div>

    <div class="col">
        @using (Html.BeginForm("GetAll", "Area", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            
            <div class="input-group" style="float: left;">
                <span class="input-group-text" id="basic-addon1">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </span>
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "NombreArea", @placeholder = "Buscar producto" })
                <button type="submit" class="btn btn-primary">Buscar</button>

            </div>
        }
    </div>
    

</div>

@if (Model.Areas != null)
{

    <div class="row">

        @foreach (ML.Area area in Model.Areas)
        {
            <div class="col-4" style="margin-bottom: 30px;">
                <div class="card" style="width: 18rem;">
                    <img src="https://cdn3d.iconscout.com/3d/premium/thumb/product-5806313-4863042.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@area.Nombre</h5>
                        <br />
                        <a href="@Url.Action("GetByIdArea", "Producto", new {idArea = area.IdArea, nombreArea = area.Nombre})" class="btn btn-primary">Ver productos...</a>
                    </div>
                </div>
            </div>

        }

    </div>
}
else
{
    <h3 class="text-center">No se encontraron datos</h3>
}

